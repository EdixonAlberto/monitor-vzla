{
  "name": "bot-monitor-vzla",
  "description": "Bot de discord para monitorear el dolar paralelo en Venezuela",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write src/**/*.ts",
    "build": "tsc && tsc-alias",
    "dev": "nodemon --config",
    "start": "node dist"
  },
  "nodemonConfig": {
    "ext": ".ts,.env",
    "watch": [
      "src/*"
    ],
    "verbose": false,
    "exec": "yarn build && yarn start"
  },
  "dependencies": {
    "@edixon/concord": "^1.7.1",
    "@typegoose/typegoose": "^9.7.1",
    "instagrapi": "^5.0.0",
    "mongoose": "^6.2.10"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "tsc-alias": "^1.6.6",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.6.0",
    "yarn": "~1.22.0"
  }
}
