{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "skipLibCheck": true,
    // "baseUrl": "src",
    // "paths": {},
    "typeRoots": ["../../node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
